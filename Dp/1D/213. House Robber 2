class Solution {
    int n;
    int[]dp;


    public int solve(int i,int n ,int [] nums){
        if(i>n ) return 0;

        if(dp[i]!=-1) return dp[i];

        int steal = nums[i]+solve(i+2,n,nums);
        int skip = solve(i+1,n,nums);

        return dp[i]= Math.max(steal, skip);

    }
    public int rob(int[] nums) {
        n = nums.length;
        if(n == 0){
            return 0;
        }
        if(n==1) return nums[0];
         dp = new int[n];
        Arrays.fill(dp,-1);
        int case1 = solve(0,nums.length-2,nums);
         dp = new int[n];
        Arrays.fill(dp,-1);
        int case2 = solve(1,nums.length-1,nums);

        return Math.max(case1,case2);

        
    }
}
